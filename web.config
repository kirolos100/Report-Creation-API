<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="httpPlatformHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified" />
    </handlers>
    <httpPlatform processPath="%home%\site\wwwroot\env\Scripts\python.exe"
                  arguments="%home%\site\wwwroot\app.py"
                  stdoutLogEnabled="true"
                  stdoutLogFile="%home%\LogFiles\stdout"
                  startupTimeLimit="60">
      <environmentVariables>
        <environmentVariable name="PORT" value="%HTTP_PLATFORM_PORT%" />
        <environmentVariable name="ENVIRONMENT" value="production" />
      </environmentVariables>
    </httpPlatform>
    
    <!-- Increase timeout settings for long-running operations -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <!-- Platform-level CORS headers so even 4xx/5xx include ACAO -->
        <add name="Access-Control-Allow-Origin" value="https://green-smoke-05633cb03-preview.westeurope.2.azurestaticapps.net" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS, PATCH, HEAD" />
        <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization, Accept, Cache-Control, X-Requested-With, Origin, Accept-Language" />
        <add name="Access-Control-Allow-Credentials" value="true" />
        <add name="Access-Control-Expose-Headers" value="Content-Disposition" />
      </customHeaders>
    </httpProtocol>
    
    <!-- Configure request timeout -->
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="104857600" /> <!-- 100MB -->
      </requestFiltering>
    </security>
    
    <!-- Increase timeout for long-running requests -->
    <serverRuntime enabled="true" frequentHitThreshold="1" frequentHitTimePeriod="00:00:20" />
    
    <!-- Configure static content caching -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="7.00:00:00" />
    </staticContent>
  </system.webServer>
  
  <!-- Application settings -->
  <appSettings>
    <add key="PYTHONPATH" value="%home%\site\wwwroot" />
    <add key="ENVIRONMENT" value="production" />
    <add key="FLASK_ENV" value="production" />
  </appSettings>
</configuration>
